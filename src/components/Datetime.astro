---
// ✅ 我們移除對 config 的依賴，這樣就絕對不會報錯了
// import { LOCALE } from "../config";

interface Props {
  pubDatetime: string | Date;
  modDatetime?: string | Date | undefined | null;
  size?: "sm" | "lg";
  className?: string;
  timezone?: string;
}

const { pubDatetime, modDatetime, size = "sm", className, timezone } = Astro.props;

const myDatetime = new Date(pubDatetime);
const myModDatetime = modDatetime ? new Date(modDatetime) : null;

const dateOptions: Intl.DateTimeFormatOptions = {
  year: "numeric",
  month: "short",
  day: "numeric",
  timeZone: timezone,
};

const timeOptions: Intl.DateTimeFormatOptions = {
  hour: "2-digit",
  minute: "2-digit",
  timeZone: timezone,
};
---

<div class={`flex items-center space-x-2 opacity-80 ${className}`}>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class={`${
      size === "sm" ? "scale-90" : "scale-100"
    } inline-block h-6 w-6 min-w-[1.375rem] fill-skin-base`}
    aria-hidden="true"
  >
    <path
      d="M7 11h2v2H7zm0 4h2v2H7zm4-4h2v2h-2zm0 4h2v2h-2zm4-4h2v2h-2zm0 4h2v2h-2z"
    ></path>
    <path
      d="M5 22h14c1.103 0 2-.897 2-2V6c0-1.103-.897-2-2-2h-2V2h-2v2H9V2H7v2H5c-1.103 0-2 .897-2 2v14c0 1.103.897 2 2 2zM19 8l.001 12H5V8h14z"
    ></path>
  </svg>
  <span class="sr-only">Posted on:</span>
  <span class={`italic ${size === "sm" ? "text-sm" : "text-base"}`}>
    <time datetime={myDatetime.toISOString()}>
      {/* ✅ 直接指定使用台灣格式 zh-TW */}
      {myDatetime.toLocaleDateString("zh-TW", dateOptions)}
    </time>
    <span aria-hidden="true"> | </span>
    <span class="sr-only">&nbsp;at&nbsp;</span>
    <span class="text-nowrap">
      {/* ✅ 直接指定使用台灣格式 zh-TW */}
      {myDatetime.toLocaleTimeString("zh-TW", timeOptions)}
    </span>
  </span>
  {
    myModDatetime && (
      <span class={`italic ${size === "sm" ? "text-sm" : "text-base"}`}>
        (Updated:
        <time datetime={myModDatetime.toISOString()}>
          {myModDatetime.toLocaleDateString("zh-TW", dateOptions)}
        </time>
        )
      </span>
    )
  }
</div>